<a href="https://wa.me/595984641877" target="_blank" class="whatsapp-btn" id="whatsappBtn">
<i class="fab fa-whatsapp"></i>
</a>

<!-- Botón Volver Arriba -->
<button class="scroll-to-top" id="scrollToTopBtn" title="Volver arriba">
<i class="fas fa-chevron-up"></i>
</button>
<script>
const indicators = document.querySelectorAll('.indicator');
const images = ['proyectos/portada/img01.png', 'proyectos/portada/img02.png', 'proyectos/portada/img03.png', 'proyectos/portada/img04.png'];
let currentIndex = 0;
let sliderInterval;
const header = document.querySelector('header');
const whatsappBtn = document.getElementById('whatsappBtn');
const scrollToTopBtn = document.getElementById('scrollToTopBtn');
// Función para mostrar slide
function showSlide(index) {
    header.style.backgroundImage = `url('${images[index]}')`;
    indicators.forEach((ind, idx) => ind.classList.toggle('active', idx === index));
    currentIndex = index;
}
// Iniciar slider
sliderInterval = setInterval(() => showSlide((currentIndex + 1) % images.length), 7000);
showSlide(0);
// Eventos para indicadores
indicators.forEach((ind, idx) => {
    ind.addEventListener('click', () => {
        clearInterval(sliderInterval);
        showSlide(idx);
        sliderInterval = setInterval(() => showSlide((currentIndex + 1) % images.length), 7000);
    });
});
// Menú móvil
document.getElementById("hamburgerBtn").onclick = () => {
    const menu = document.getElementById("mobileMenu");
    const nav = document.getElementById("mainNav");
    const open = menu.style.display === "flex";
    menu.style.display = open ? "none" : "flex";
    nav.classList.add("scrolled");
};
// Scroll events
window.addEventListener('scroll', () => {
    const nav = document.getElementById("mainNav");
    // Navbar al hacer scroll
    if (window.scrollY > 50) {
        nav.classList.add("scrolled");
    } else {
        if (document.getElementById("mobileMenu").style.display !== "flex") {
            nav.classList.remove("scrolled");
        }
    }
    // Elementos con animación
    const fadeElements = document.querySelectorAll('.fade-left, .fade-up, .gallery-item');
    const windowHeight = window.innerHeight;
    fadeElements.forEach(el => {
        const elementTop = el.getBoundingClientRect().top;
        if (elementTop < windowHeight - 100) {
            el.classList.add('visible');
        }
    });
    // Efecto especial para galería en móvil
    if (window.innerWidth <= 768) {
        const galleryItems = document.querySelectorAll('.gallery-item');
        const viewportCenter = window.innerHeight / 2;
        const activationThreshold = 100; // Margen de activación
        galleryItems.forEach(item => {
            const rect = item.getBoundingClientRect();
            const itemCenter = rect.top + rect.height / 2;
            const distanceToCenter = Math.abs(itemCenter - viewportCenter);
            if (distanceToCenter < activationThreshold) {
                item.classList.add('mobile-active');
            } else {
                item.classList.remove('mobile-active');
            }
        });
    }
    
    // Control del botón "Volver arriba"
    const scrollPosition = window.scrollY;
    const documentHeight = document.documentElement.scrollHeight;
    const scrollThreshold = documentHeight / 2; // Aparece a la mitad de la página
    
    if (scrollPosition > scrollThreshold) {
        scrollToTopBtn.classList.add('visible');
    } else {
        scrollToTopBtn.classList.remove('visible');
    }
});
// Inicializar elementos visibles al cargar
document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-left, .fade-up, .gallery-item');
    const windowHeight = window.innerHeight;
    fadeElements.forEach(el => {
        const elementTop = el.getBoundingClientRect().top;
        if (elementTop < windowHeight - 100) {
            el.classList.add('visible');
        }
    });
    // Mostrar WhatsApp después de 0.5 segundos
    setTimeout(() => {
        whatsappBtn.classList.add('visible');
    }, 500);
    // Configuración para el slider táctil en móviles
    let touchStartX = 0;
    let touchEndX = 0;
    header.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
    }, false);
    header.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
    }, false);
    function handleSwipe() {
        if (touchEndX < touchStartX) {
            // Swipe left
            showSlide((currentIndex + 1) % images.length);
        }
        if (touchEndX > touchStartX) {
            // Swipe right
            showSlide((currentIndex - 1 + images.length) % images.length);
        }
    }
    // Modal functionality
    const modal = document.getElementById("contactModal");
    const openModalBtn = document.getElementById("openModalBtn");
    const closeBtn = document.querySelector(".close");
    openModalBtn.onclick = function() {
        modal.style.display = "block";
    }
    closeBtn.onclick = function() {
        modal.style.display = "none";
    }
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    // Botón volver arriba
    scrollToTopBtn.addEventListener('click', function() {
        const scrollDuration = 800; // 0.8 segundos para una animación más rápida
        const scrollStep = -window.scrollY / (scrollDuration / 15);
        const scrollInterval = setInterval(function() {
            if (window.scrollY !== 0) {
                window.scrollBy(0, scrollStep);
            } else {
                clearInterval(scrollInterval);
            }
        }, 15);
    });
    
    // Form submission
    document.getElementById('contactForm').addEventListener('submit', function(event) {
        event.preventDefault();
        const form = event.target;
        const formData = new FormData(form);
        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (response.ok) {
                document.getElementById('contactForm').style.display = 'none';
                document.getElementById('successAnimation').style.display = 'block';
                form.reset();
                setTimeout(() => {
                    document.getElementById('successAnimation').style.display = 'none';
                    document.getElementById('contactForm').style.display = 'block';
                    modal.style.display = "none";
                }, 3000);
            } else {
                response.json().then(data => {
                    if (Object.hasOwn(data, 'errors')) {
                        alert(data["errors"].map(error => error["message"]).join(", "));
                    } else {
                        alert('Oops! There was a problem submitting your form');
                    }
                });
            }
        })
        .catch(error => {
            alert('Oops! There was a problem submitting your form');
        });
    });
});
</script>
</body>
</html>

